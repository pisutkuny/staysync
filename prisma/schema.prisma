generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Room {
  id     Int    @id @default(autoincrement())
  number String @unique
  status String @default("Available") // Available, Occupied, Maintenance, Reserved
  price  Float
  
  // Room Details
  floor    Int?
  size     Float? // Square meters
  features Json?  // Array of strings: ["Air Con", "Balcony"]
  images   String[] // Array of image URLs

  // Initial meter readings (for pre-existing installations)
  waterMeterInitial    Float @default(0)
  electricMeterInitial Float @default(0)

  // Contract & Deposit Settings
  defaultContractDuration Int @default(12) // Months
  defaultDeposit          Float @default(0)

  // Phase 2: Common Area Billing (Room-based)
  chargeCommonArea Boolean @default(false) // Enable common area fees for this room

  // Multi-tenant support
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])

  residents Resident[]
  billings  Billing[]
  bookings  Booking[] // Relation to Booking

  // Performance Indexes
  @@index([status])
  @@index([organizationId])
}

model Booking {
  id        Int      @id @default(autoincrement())
  
  // Dates
  checkInDate  DateTime
  checkOutDate DateTime?
  
  // Status
  status String @default("Pending") // Pending, Confirmed, Rejected, Cancelled, Completed
  
  // Financial
  depositAmount Float?
  bookingSlip   String? // URL to slip image
  
  // Details
  specialRequest String?
  
  // Guest Details (if no user account)
  guestName   String?
  guestPhone  String?
  guestLineId String?
  
  // Relations
  roomId Int
  room   Room @relation(fields: [roomId], references: [id])
  
  userId Int?
  user   User? @relation(fields: [userId], references: [id])

  // Multi-tenant support
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([checkInDate])
  @@index([roomId])
  @@index([userId])
  @@index([organizationId])
}

model Resident {
  id             Int     @id @default(autoincrement())
  fullName       String
  phone          String  @default("")
  lineUserId     String? // Line User ID for notifications
  lineVerifyCode String? @unique // Code for linking Line Account
  room           Room?   @relation(fields: [roomId], references: [id])
  roomId         Int?
  status         String  @default("Active") // Active, CheckedOut

  // Multi-tenant support
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])

  // Deposit Management
  deposit Float @default(0)

  // Contract Tracking
  contractStartDate      DateTime  @default(now())
  contractEndDate        DateTime? // Calculated: startDate + duration months
  contractDurationMonths Int       @default(12) // Default 12 months

  // Deposit Status Tracking
  depositStatus         String    @default("Held") // Held, Returned, Forfeited
  depositReturnedDate   DateTime? // When deposit was returned/forfeited
  depositReturnedAmount Float? // Actual amount returned (may differ from deposit)
  depositForfeitReason  String? // Reason for forfeiting (if applicable)

  checkInDate  DateTime   @default(now())
  checkOutDate DateTime?
  issues       Issue[]
  billings     Billing[]
  documents    Document[]

  // Performance Indexes
  @@index([depositStatus])
  @@index([contractEndDate])
  @@index([organizationId])
}

model Document {
  id         Int      @id @default(autoincrement())
  type       String // Contract, IDCard, Other
  url        String
  uploadedAt DateTime @default(now())
  resident   Resident @relation(fields: [residentId], references: [id])
  residentId Int
}

model Billing {
  id Int @id @default(autoincrement())

  // Multi-tenant support
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])

  // Meter Readings
  waterMeterLast    Float @default(0)
  waterMeterCurrent Float @default(0)
  waterRate         Float @default(18) // Default price per unit

  electricMeterLast    Float @default(0)
  electricMeterCurrent Float @default(0)
  electricRate         Float @default(7) // Default price per unit

  meterReading Float @default(0) // Kept for legacy compatibility (can be removed later)

  // Fees
  internetFee Float @default(0)
  trashFee    Float @default(0)
  otherFees   Float @default(0)

  // Phase 2: Common Area Fees (auto-calculated from CentralMeter)
  commonWaterFee    Float @default(0)
  commonElectricFee Float @default(0)
  commonInternetFee Float @default(0)
  commonTrashFee    Float @default(0)

  note String?

  totalAmount   Float
  paymentStatus String @default("Pending") // Pending, Review, Paid

  // Payment Slip fields
  slipImage   String? // Google Drive webViewLink
  slipFileId  String? // Google Drive file ID
  paymentDate DateTime? // When the slip was uploaded

  // Review fields
  reviewedBy Int? // User ID who reviewed
  reviewedAt DateTime? // When review was completed
  reviewNote String? // Admin note for rejection/approval

  month     DateTime @default(now()) // To track billing month
  createdAt DateTime @default(now())

  room   Room @relation(fields: [roomId], references: [id])
  roomId Int

  resident   Resident? @relation(fields: [residentId], references: [id])
  residentId Int?

  reviewer User? @relation("BillingReviewer", fields: [reviewedBy], references: [id])

  // Performance Indexes
  @@index([paymentStatus])
  @@index([paymentDate])
  @@index([month])
  @@index([roomId])
  @@index([residentId])
  @@index([createdAt])
  @@index([organizationId])
}

model Issue {
  id                 Int       @id @default(autoincrement())
  category           String // Water, Electricity, Internet, Other
  description        String
  photo              String?
  afterPhoto         String? // Photo heavily requested by user
  reporterName       String? // For public/guest reports
  reporterContact    String? // Phone or Line ID
  reporterLineUserId String? // Captured from LIFF for notifications
  status             String    @default("Pending") // Pending, InProgress, Done
  createdAt          DateTime  @default(now())
  completedAt        DateTime?

  resident   Resident? @relation(fields: [residentId], references: [id])
  residentId Int?

  // Multi-tenant support
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])

  // Performance Indexes
  @@index([status])
  @@index([createdAt])
  @@index([residentId])
  @@index([organizationId])
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String // Hashed with bcrypt
  fullName String
  phone    String?
  avatar   String? // Profile picture URL

  // Role-based access control
  role String @default("STAFF") // OWNER, ADMIN, STAFF, TENANT

  // Email verification
  emailVerified      Boolean   @default(false)
  verificationToken  String?   @unique
  verificationExpiry DateTime?

  // Password reset
  resetToken       String?   @unique
  resetTokenExpiry DateTime?

  // Account status
  status      String    @default("Active") // Active, Suspended, Deleted
  lastLoginAt DateTime?

  // Multi-tenant
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])

  // Two-Factor Authentication
  twoFactorEnabled Boolean @default(false)
  twoFactorSecret  String? // Encrypted TOTP secret

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  reviewedBills Billing[]     @relation("BillingReviewer")
  bookings      Booking[]
  auditLogs     AuditLog[]
  sessions      UserSession[]

  @@index([email])
  @@index([organizationId])
  @@index([status])
}

model SystemConfig {
  id          Int    @id @default(autoincrement())
  dormName    String @default("My Dormitory")
  dormAddress String @default("123 Street, City")

  // Multi-tenant support
  organizationId Int          @unique
  organization   Organization @relation(fields: [organizationId], references: [id])

  // Automation Settings
  enableAutoReminders Boolean @default(false)
  reminderDay         Int     @default(25) // Day of month to send reminders (1-28)
  reminderTime        String  @default("09:00") // Time to send reminders (HH:mm)

  // Security Settings
  emailVerificationRequired Boolean @default(false)

  // Bank Info
  bankName          String  @default("Bank Name")
  bankAccountName   String  @default("Account Name")
  bankAccountNumber String  @default("000-0-00000-0")
  promptPayId       String? // Optional PromptPay ID
  adminLineUserId   String? // Line User ID for Admin Alerts

  // Invoice Customization
  invoiceLogo  String? // URL of the logo image
  invoiceNote  String? // Custom note/footer text
  invoiceColor String? // Theme color hex code (e.g. #4f46e5)

  // Default Rates
  waterRate    Float @default(18)
  electricRate Float @default(7)
  trashFee     Float @default(0)

  // Phase 2: Common Area Billing
  enableCommonAreaCharges Boolean @default(false) // Master toggle for common area billing
  commonAreaDistribution  String  @default("equal") // "equal" or "proportional"

  // Phase 2 Enhancement: Common Area Fee Cap
  commonAreaCapType       String @default("none") // "none", "percentage", "fixed"
  commonAreaCapPercentage Float  @default(100) // If percentage: 0-100 (100 = no cap)
  commonAreaCapFixed      Float  @default(0) // If fixed: amount in baht

  internetFee Float @default(0)
  otherFees   Float @default(0)

  // Chatbot Auto-Reply Content
  wifiSsid           String @default("StaySync_Residences")
  wifiPassword       String @default("staysync_wifi")
  rulesText          String @default("1. ห้ามส่งเสียงดังหลัง 22.00 น.\n2. ห้ามสูบบุหรี่ในห้องพัก\n3. จ่ายค่าเช่าภายในวันที่ 5 ของทุกเดือน")
  emergencyPhone     String @default("191")
  adminPhone         String @default("081-234-5678")
  adminLineIdDisplay String @default("@staysync_admin")

  updatedAt DateTime @updatedAt
}

model Expense {
  id            Int      @id @default(autoincrement())
  title         String
  amount        Float
  category      String   @default("Other") // Maintenance, Utilities, Salary, Other
  date          DateTime @default(now())
  note          String?
  receiptUrl    String? // Google Drive webViewLink
  receiptFileId String? // Google Drive file ID (for deletion)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Multi-tenant support
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@index([date])
  @@index([category])
  @@index([organizationId])
}

model RecurringExpense {
  id         Int      @id @default(autoincrement())
  title      String
  amount     Float
  category   String
  note       String?
  dayOfMonth Int      @default(1) // Day to create (1-28)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  organizationId Int @default(1) // Default for existing records, should be required later
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@index([isActive])
  @@index([dayOfMonth])
  @@index([organizationId])
}

model LineBotState {
  lineUserId String   @id
  state      String   @default("IDLE") // e.g., IDLE, REPAIR_DESC
  data       String? // JSON string for temp data
  updatedAt  DateTime @updatedAt
}

model CentralMeter {
  id    Int      @id @default(autoincrement())
  month DateTime

  // Multi-tenant support
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])

  // Water
  waterMeterLast       Float
  waterMeterCurrent    Float
  waterUsage           Float // Auto-calculated
  waterRateFromUtility Float // Actual cost from utility bill (per unit)
  waterTotalCost       Float // Auto-calculated

  // Electric
  electricMeterLast       Float
  electricMeterCurrent    Float
  electricUsage           Float
  electricRateFromUtility Float
  electricTotalCost       Float

  // Fixed monthly costs (optional)
  internetCost Float? // Monthly internet cost
  trashCost    Float? // Monthly trash collection cost

  // For analysis notes
  note String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([month, organizationId])
  @@index([organizationId])
}

// ============================================
// NEW MODELS FOR MULTI-TENANT SUPPORT
// ============================================

model Organization {
  id     Int    @id @default(autoincrement())
  name   String
  slug   String @unique
  email  String?
  phone  String?
  status String @default("Active") // Active, Suspended, Deleted

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users         User[]
  rooms         Room[]
  residents     Resident[]
  billings      Billing[]
  bookings      Booking[]
  issues        Issue[]
  expenses      Expense[]
  centralMeters CentralMeter[]
  auditLogs     AuditLog[]
  systemConfig  SystemConfig?
  recurringExpenses RecurringExpense[]

  @@index([slug])
  @@index([status])
}

model UserSession {
  id           String   @id @default(cuid())
  userId       Int
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessionToken String   @unique
  ipAddress    String?
  userAgent    String?
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  lastActivity DateTime @default(now())

  @@index([userId])
  @@index([sessionToken])
  @@index([expiresAt])
}

model AuditLog {
  id        Int    @id @default(autoincrement())
  userId    Int
  user      User   @relation(fields: [userId], references: [id])
  userEmail String
  userName  String

  action   String // CREATE, UPDATE, DELETE, LOGIN, LOGOUT, etc.
  entity   String // Room, Resident, Billing, User, etc.
  entityId Int?

  changes Json? // { before: {...}, after: {...} }

  ipAddress String?
  userAgent String?

  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([entity, entityId])
  @@index([organizationId])
  @@index([createdAt])
  @@index([action])
}
